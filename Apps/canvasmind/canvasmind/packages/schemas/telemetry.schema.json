{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://canvasmind.dev/schemas/telemetry.schema.json",
  "title": "Telemetry Events",
  "type": "object",
  "properties": {
    "session": { "type": "string" },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["ts","type","data"],
        "properties": {
          "ts": { "type": "number" },
          "type": {
            "type": "string",
            "enum": [
              "fps.tick",
              "spawn.mesh",
              "apply.skybox",
              "budget.update",
              "evict.asset",
              "error"
            ]
          },
          "data": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["session","events"],
  "additionalProperties": false
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://canvasmind.dev/schemas/mcp.schema.json",
  "title": "Model Context Protocol (CanvasMind subset)",
  "type": "object",
  "oneOf": [
    { "$ref": "#/$defs/registryItem" },
    { "$ref": "#/$defs/skyboxOut" },
    { "$ref": "#/$defs/meshOut" }
  ],
  "$defs": {
    "registryItem": {
      "type": "object",
      "required": ["id","name","server_url","tags","capabilities"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "server_url": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "capabilities": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "skyboxOut": {
      "type": "object",
      "required": ["asset","provenance"],
      "properties": {
        "asset": {
          "type": "object",
          "required": ["kind","urls","mime"],
          "properties": {
            "kind": { "enum": ["texture.equirect","texture.cubemap"] },
            "urls": { "type": "array", "items": { "type": "string" } },
            "mime": { "type": "string" }
          },
          "additionalProperties": false
        },
        "provenance": {
          "type": "object",
          "required": ["server","model","ts"],
          "properties": {
            "server": { "type": "string" },
            "model": { "type": "string" },
            "prompt": { "type": "string" },
            "seed": { "type": "number" },
            "ts": { "type": "number" }
          },
          "additionalProperties": false
        },
        "budget_hint": {
          "type": "object",
          "properties": { "tex_mem_mb_est": { "type": "number" } },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "meshOut": {
      "type": "object",
      "required": ["asset","provenance"],
      "properties": {
        "asset": {
          "type": "object",
          "required": ["kind","url"],
          "properties": {
            "kind": { "const": "model.gltf" },
            "url": { "type": "string" }
          },
          "additionalProperties": false
        },
        "provenance": {
          "type": "object",
          "required": ["server","model","ts"],
          "properties": {
            "server": { "type": "string" },
            "model": { "type": "string" },
            "prompt": { "type": "string" },
            "seed": { "type": "number" },
            "ts": { "type": "number" }
          },
          "additionalProperties": false
        },
        "budget_hint": {
          "type": "object",
          "properties": { "tris_est": { "type": "number" } },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
